
<!doctype html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>User Profile</title>
		<meta name="description" content="Sandwich Ordering Service - Menu - Customer">
		<meta name="author" content="Daniel Jones">
		<link href="{{host}}/style.css" type="text/css" rel="stylesheet" />
		<script src='https://kit.fontawesome.com/a076d05399.js'></script>
		<script type="module" src="{{host}}/main.js"></script>
	</head>
	<body>
		<header>
		<h1>Profile</h1>
		<div class="dropdown">
			<button class="dropbtn"><i class='fas fa-user-alt' style='font-size:16px'></i> {{this.user}}</button>
			<div class="dropdown-content">
				<a href="/menu">Menu</a>
				<a href="#">Order</a>
				<a href="/logout">Log Out</a>
			</div>
		</div>
		</header>
		{{#if msg}}
 			<aside>
				<p class="msg">{{msg}}</p>
			</aside>
		{{/if}}
		<main>
		<table>
			{{#each records}}
			<tr><th>First Name: {{this.firstName}}</th></tr>
			<tr><th>Last Name: {{this.lastName}}</th></tr>
			<tr><th>Company: {{this.company}}</th></tr>
			<tr><th>Address Line 1: {{this.addressLine1}}</th></tr>
			<tr><th>Address Line 2: {{this.addressLine2}}</th></tr>
			<tr><th>City: {{this.city}}</th></tr>
			<tr><th>Postcode: {{this.postcode}}</th></tr>
			{{/each}}
		</table>
		<form method="post" action="/profile" enctype="multipart/form-data">
				<p>
					<label for="firstName">First Name</label><br />
					<input type="text" name="firstName" placeholder="e.g John" value="" autofocus required />
				</p>
				<p>
					<label for="lastName">Last Name</label><br />
					<input type="text" name="lastName" placeholder="e.g Smith" value=""/>
				</p>
				<p>
					<label for="company">Company</label><br />
					<input type="text" name="company" placeholder="e.g Google" value=""/>
				</p>
				<p>
					<label for="addressLine1">Address Line 1</label><br />
					<input type="text" name="addressLine1" placeholder="e.g 3 Gulson Rd" value=""/>
				</p>
				<p>
					<label for="addressLine2">Address Line 2 (Optional)</label><br />
					<input type="text" name="addressLine2" value=""/>
				</p>
				<p>
					<label for="city">Town / City</label><br />
					<input type="text" name="city" placeholder="e.g Coventry" value=""/>
				</p>
				<p>
					<label for="postcode">Postcode</label><br />
					<input type="text" name="postcode" placeholder="e.g CV1 2JH" value=""/>
				</p>
			
				<p><input type="submit" value="Update"></p>
			</form>
		</main>
	</body>
</html>
