
<!doctype html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Main menu for customers</title>
		<meta name="description" content="Sandwich Ordering Service - Menu - Customer">
		<meta name="author" content="Daniel Jones">
		<link href="{{host}}/style.css" type="text/css" rel="stylesheet" />
		<script src='https://kit.fontawesome.com/a076d05399.js'></script>
		<script type="module" src="{{host}}/main.js"></script>
	</head>
	<body>
		<header>
		<h1>Menu</h1>
		<div class="dropdown">
			<button class="dropbtn"><i class='fas fa-user-alt' style='font-size:16px'></i> {{this.user}}</button>
			<div class="dropdown-content">
				<a href="/profile">Profile</a>
				<a href="#">Order</a>
				<a href="/logout">Log Out</a>
			</div>
		</div>
		</header>
		{{#if msg}}
 			<aside>
				<p class="msg">{{msg}}</p>
			</aside>
		{{/if}}
		<select name="select-categories" id="select-categories" onchange="document.location.href=this.value">
		{{#each categories}}
		<option value="#{{this.category}}">{{this.category}}</option>
		{{/each}}		
		</select>
		<div id="main-wrapper">
			<div id="menu">
			<table>
				<tbody id="Sandwich">
					<th>Sandwiches</th>
				</tbody>
				{{#each sandwiches}}
				<tr>
					<td><img src="photos/{{this.photo}}" /></td>
					<td>{{this.itemname}}</td>
					<td>£{{this.price}}</td>
					<td>{{this.ingredients}}</td>
					<td><input id="add-to-order" type="submit" value="Add to order" onclick='addToOrder("{{this.itemname}}", "{{this.price}}")'></td>
				</tr>
				{{/each}}
				<tbody id="Snack">
					<th>Snacks</th>
				</tbody>
				{{#each snacks}}
				<tr>
					<td><img src="photos/{{this.photo}}" /></td>
					<td>{{this.itemname}}</td>
					<td>£{{this.price}}</td>
					<td>{{this.ingredients}}</td>
					<td><input id="add-to-order" type="submit" value="Add to order" onclick='addToOrder("{{this.itemname}}", "{{this.price}}")'></td>
				</tr>
				{{/each}}
				<tbody id="Drink">
					<th>Drinks</th>
				</tbody>
				{{#each drinks}}
				<tr>
					<td><img src="photos/{{this.photo}}" /></td>
					<td>{{this.itemname}}</td>
					<td>£{{this.price}}</td>
					<td>{{this.ingredients}}</td>
					<td><input id="add-to-order" type="submit" value="Add to order" onclick='addToOrder("{{this.itemname}}", "{{this.price}}")'></td>
				</tr>
				{{/each}}
			</table>
		</div>
		<div id="order">
			<h2>Order</h2>
			<div id="order-content">
				
			</div>
			<input id="checkout" type="submit" value="Checkout">
		</div>
	</div>	
	<script>
		function addToOrder(name, price) {
			var order = document.getElementById('order-content');
			order.innerHTML += `<p>${name}, ${price}</p>`;
		}
	</script>
	</body>
</html>